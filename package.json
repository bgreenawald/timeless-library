{
  "name": "timeless-library",
  "type": "module",
  "version": "0.0.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:pre-commit": "npm run test:jest",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,md,json}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "astro": "^5.15.8",
    "diff": "^8.0.2",
    "diff-match-patch": "^1.0.5",
    "diff2html": "^3.4.51",
    "dompurify": "^3.2.7",
    "markdown-it": "^14.1.0",
    "tailwindcss": "^4.1.17",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@astrojs/check": "^0.9.5",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.12",
    "@types/markdown-it": "^14.1.2",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "4.0.13",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
