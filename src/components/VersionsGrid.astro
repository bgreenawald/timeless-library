---
import { getThemeColor } from '../lib/colors';
import type { GithubTag } from '../lib/github';

interface Props {
  versions: GithubTag[];
  bookSlug: string;
}

const { versions, bookSlug } = Astro.props;
---

<section>
  <h2 class="text-pane text-3xl md:text-4xl text-center max-w-3xl mx-auto">All Available Versions</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-12">
    {versions.map((version: GithubTag, index: number) => (
      <a href={`/books/${bookSlug}/${version.name}`} class="book-card">
        <div class="book-cover" style={`background-color: ${getThemeColor(index)}`}>
          <div class="book-title">{version.name}</div>
        </div>
        <div class="book-info">
          <p class="book-summary">View details for version {version.name}</p>
        </div>
      </a>
    ))}
  </div>
</section> 